<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="airqs.station">
	<cache type="org.mybatis.caches.ehcache.EhcacheCache" eviction="LRU" flushInterval="3600000" size="1024"/>
	<resultMap id="StationResult" type="com.github.airqs.entity.City">
		<id property="id" column="id" />
		<result property="name" column="name"/>
		<result property="areaName" column="areaName"/>
		<result property="pointName" column="pointName"/>
		<result property="cityId" column="cityId"/>
	</resultMap>
	
	
	<select id="getByName" resultMap="StationResult">
	<![CDATA[
		select * from airqs_station_hour where name = #{name,jdbcType=VARCHAR}
	]]>
	</select>
	
	<insert id="add" parameterType="com.github.airqs.entity.City" useGeneratedKeys="true" keyProperty="id">
	<![CDATA[
		insert into airqs_station_hour (
			id,name,areaName,pointName,cityId
		)values (
			#{id,jdbcType=NUMERIC},#{name,jdbcType=VARCHAR},#{areaName,jdbcType=VARCHAR},#{pointName,jdbcType=VARCHAR},#{cityId,jdbcType=NUMERIC},
		)
	]]>
	</insert>
	
</mapper>